{
    "name": "vdhicts/svm-api-client",
    "description": "API client for the SVM API",
    "license": "MIT",
    "authors": [
        {
            "name": "Dick van der Heiden",
            "email": "dick@goedemiddag.nl"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/collections": "^12.15",
        "nesbot/carbon": "^3.9",
        "saloonphp/saloon": "^3.13"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.1",
        "symplify/easy-coding-standard": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "Vdhicts\\SVM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vdhicts\\SVM\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "code-style:check": "vendor/bin/ecs",
        "code-style:fix": "vendor/bin/ecs --fix",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit",
        "test:no-coverage": "vendor/bin/phpunit --no-coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
